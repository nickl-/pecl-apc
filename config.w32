// $Id$
// vim:ft=javascript

ARG_ENABLE("apc", "Alternative PHP Cache", "no");

if (PHP_APC != "no") {
	if (PHP_VERSION > 4) {
		WARNING('APC does not yet compile with php >= 5');
	} else {
		EXTENSION('apc', 'apc.c apc_cache.c apc_compile.c apc_debug.c apc_main.c \
				apc_optimizer.c apc_pair.c apc_shm.c apc_sma.c apc_stack.c apc_zend.c \
				php_apc.c');
		AC_DEFINE('HAVE_APC', 1);
	}
}

